client.config [
  '$stateProvider','$locationProvider','$urlRouterProvider'
  ($stateProvider,$locationProvider,$urlRouterProvider) ->

    # $locationProvider.html5Mode(true)
    $urlRouterProvider.otherwise('/home')

    $stateProvider
      .state 'home',
        url: '/home',
        templateUrl: "<%=asset_path('home.html')%>"
        controller: 'HomeCtrl'
      .state 'game',
        url: '/game?channel&id&game_id'
        templateUrl: "<%=asset_path('game.html')%>"
        controller: 'GameCtrl'

]
